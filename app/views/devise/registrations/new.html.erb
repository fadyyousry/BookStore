<section class="static about-sec">
  <div class="container">
    <h1><%= I18n.t("registeration.title") %></h1>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, placeholder: I18n.t("registeration.placeholder.email"), autocomplete: "email" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, placeholder: I18n.t("registeration.placeholder.password"), autocomplete: "new-password" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, placeholder: I18n.t("registeration.placeholder.confirm_password"), autocomplete: "new-password" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit I18n.t("registeration.signup_button"), class: "btn black" %>
        </div>
        <h5>
          <%= render "devise/shared/links" %>
        </h5>
    <% end %>

    </div>
  </div>
</section>