<h1>Books</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Published date</th>
      <th>Description</th>
      <th>Isbn</th>
      <th>Page count</th>
      <th>Image link</th>
      <th>Language</th>
      <th>Is PDF</th>
      <th>quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.publisher_name %></td>
        <td><%= book.published_date %></td>
        <td><% book.description %></td>
        <td><%= book.isbn %></td>
        <td><%= book.page_count %></td>
        <td><%= image_tag book.image_link %></td>
        <td><%= book.language %></td>
        <td><%= book.is_pdf %></td>
        <td><%= book.quantity %></td>
        <td><%= book.price %></td>
        <td><%= link_to t(:show, scope: [:default]), book %></td>
        <td><%= link_to t(:edit, scope: [:default]), edit_book_path(book) %></td>
        <td><%= link_to t(:destroy, scope: [:default]), book, method: :delete,
         data: { confirm: t(:encure, scope: [:default, :messages]) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new_book, scope: [:book, :view]), new_book_path %>
