<section class="recomended-sec">
  <div class="container">
    <div class="title">
      <h2><%= title %></h2>
      <hr>
    </div>
    <div class="row">
      <% books.each do |book| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="item">
            <%= image_tag book.image_link, alt: "img" %>
            <h3><%= book.title %></h3>
            <h6>
              <span class="price">$<%= book.price %></span> /
              <%= link_to t('default.buy_now'), '#'%></h6>
            <div class="hover">
              <%= link_to book do%>
              <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
              <%end%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @books %>
  </div>
</section>