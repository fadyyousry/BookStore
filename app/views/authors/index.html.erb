<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to t(:show, scope: [:default]), author %></td>
        <td><%= link_to t(:destroy, scope: [:default]), author, method: :delete,
         data: { confirm: t(:encure, scope: [:default, :messages]) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>