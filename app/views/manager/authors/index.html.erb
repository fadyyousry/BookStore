<table class="table table-bordered table-striped mb-none table-with-details">
  <thead>
  <tr>
    <th><%= Author.human_attribute_name(:name) %></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr class="gradeX">
        <td><%= author.name %></td>
        <td>
          <div class="center">
            <%= link_to manager_author_path(author.id), method: :delete do %>
              <i class="fa fa-times" aria-hidden="true"></i>
            <% end %>
          </div>
        </td>
        <template id="table_hidden_data">
          <table class="table mb-none">
          <div class="row">
            <% author.books.each do |book| %>
                <div class="col-sm-6 col-md-2">
                  <div class="thumbnail">
                    <%= image_tag book.image_link, class: "card-img-top" %>
                    <div class="caption">
                      <h5><%= book.title %></h5>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
        </template>
      </tr>
    <% end %>
  </tbody>
</table>